{
  "name": "garten",
  "version": "1.0.0",
  "description": "Animated canvas garden that grows over time. Zero dependencies.",
  "author": "Ade Oshineye",
  "license": "MIT",
  "keywords": [
    "animation",
    "canvas",
    "garden",
    "flowers",
    "plants",
    "background",
    "decorative",
    "generative",
    "procedural",
    "typescript"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "browser": "dist/index.global.js",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.0.0",
    "jsdom": "^24.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdeOshineye/garten.git"
  },
  "homepage": "https://github.com/AdeOshineye/garten#readme",
  "bugs": {
    "url": "https://github.com/AdeOshineye/garten/issues"
  }
}
